<main class="profile">
  <h1 class="mb-5 text-center">Welcome {{user.username}}!ðŸ‘‹</h1>
  <div class="profile-container">
    <div class="profile-container-left">
      <div class="d-flex">
        <h1>Owned games</h1>
        <a href="/games"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512zM232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z"/></svg></a>
      </div>
        <section>
          <div class="profile-cards-grid">
            {{#each user.owned}}
              <div class="profile-details">
                <img src="{{this.image_url}}" alt="owned game">
                <p>{{this.name}}</p>
                <form action="/games/{{this._id}}/delete" method="POST">
                  <button class="remove hidden"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg></button>
                </form>
              </div>
            {{/each}}
          </div>
        </section>
        <div class="d-flex">
        <h1>Played games</h1>
        <a href="/games"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512zM232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z"/></svg></a>
      </div>
        <section>
          <div class="profile-cards-grid">
            {{#if user.played.length}}
              {{#each user.played}}
                <div class="profile-details">
                  <img src="{{this.image_url}}" alt="played game">
                  <p>{{this.name}}</p>
                  <form action="/games/{{this._id}}/delete" method="POST">
                    <button class="remove hidden"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg></button>
                  </form>
                </div>
              {{/each}}
            {{else}}
              <p>You haven't added any games yet!</p>
            {{/if}}
          </div>
        </section>
        <div class="d-flex">
        <h1>Want to play</h1>
        <a href="/games"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512zM232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z"/></svg></a>
      </div>
        <section>
          <div class="profile-cards-grid">
            {{#if user.wishlist.length}}
              {{#each user.wishlist}}
                <div class="profile-details">
                  <img src="{{this.image_url}}" alt="wishlist game">
                  <p>{{this.name}}</p>
                  <form action="/games/{{this._id}}/delete" method="POST">
                    <button class="remove hidden"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg></button>
                  </form>
                </div>
              {{/each}}
            {{else}}
              <p>You haven't added any games yet!</p>
            {{/if}}
          </div>
        </section>
    </div>
    <div class="profile-container-right">
      <section class="user-rating">
        <h1 class="mb-4">Personal ranking</h1>
        {{#each userRatings}}
          <div class="d-flex justify-content-between">
            <p>{{this.game.name}}</p>
            <p>{{this.rating}}</p>
          </div>
        {{/each}}
      </section>
    </div>
  </div>
</main>
